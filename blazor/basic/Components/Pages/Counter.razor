@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment x @IncrementStep</button>
<button class="btn btn-primary" @onclick="() => currentCount--">Decrement x 1</button>

@if(currentCount > 100)
{
    <p>Your win!! Reached 100 points</p>
}

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementStep {get; set;} = 1; 

    private void IncrementCount()
    {
        currentCount += IncrementStep;
    }
}
